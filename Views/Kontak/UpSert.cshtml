@model Kontak

@if (Model != null)
{
    ViewData["Title"] = "Edit";
}
else
{
    ViewData["Title"] = "Create";
}


@if (Model != null)
{
    <h1>Edit</h1>
}
else
{
    <h1>Create</h1>
}

<h4>Kontak</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="@(Model != null ? "Update" : "Create")">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model != null)
            {
                <input type="hidden" asp-for="Id" />
            }
            <div class="form-group">
                <label asp-for="NamaDepan" class="control-label"></label>
                <input asp-for="NamaDepan" class="form-control" />
                <span asp-validation-for="NamaDepan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NamaBelakang" class="control-label"></label>
                <input asp-for="NamaBelakang" class="form-control" />
                <span asp-validation-for="NamaBelakang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoTelp" class="control-label"></label>
                <input asp-for="NoTelp" class="form-control" />
                <span asp-validation-for="NoTelp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TanggalLahir" class="control-label"></label>
                <input asp-for="TanggalLahir" class="form-control" />
                <span asp-validation-for="TanggalLahir" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>